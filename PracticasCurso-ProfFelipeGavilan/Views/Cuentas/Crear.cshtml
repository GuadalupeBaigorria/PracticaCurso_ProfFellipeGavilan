@using PracticaCurso.Models;
@model CuentasViewModel

@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>Crear Cuenta</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Cuentas" asp-action="CrearCuenta" method="post">
    <div class="mb-3">
        <label asp-for="Cuenta.NumeroDeCuenta" class="form-label"></label>
        <input asp-for="Cuenta.NumeroDeCuenta" class="form-control" />
        <span asp-validation-for="Cuenta.NumeroDeCuenta" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cuenta.TipoCuenta" class="form-label"></label>
        <select asp-for="Cuenta.TipoCuenta" class="form-select">
            @if (Model.TiposDeCuenta != null && Model.TiposDeCuenta.Any())
            {
                @foreach (var tipo in Model.TiposDeCuenta)
                {
                    <option value="@tipo.Value">@tipo.Text</option>
                }
            }
            else
            {
                <option value="">-- No hay tipos de cuenta disponibles --</option>
            }
        </select>
        <span asp-validation-for="Cuenta.TipoCuenta" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cuenta.DineroEnCuenta" class="form-label"></label>
        <input asp-for="Cuenta.DineroEnCuenta" class="form-control" />
        <span asp-validation-for="Cuenta.DineroEnCuenta" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cuenta.TipoDeTarjeta" class="form-label"></label>
        <input asp-for="Cuenta.TipoDeTarjeta" class="form-control" />
        <span asp-validation-for="Cuenta.TipoDeTarjeta" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cuenta.DineroDisponibleTC" class="form-label"></label>
        <input asp-for="Cuenta.DineroDisponibleTC" class="form-control" />
        <span asp-validation-for="Cuenta.DineroDisponibleTC" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear Cuenta</button>
</form>
